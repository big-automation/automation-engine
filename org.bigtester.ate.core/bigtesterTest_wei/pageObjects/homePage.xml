<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:ate="http://www.bigtester.org/schema/ate" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
	                       http://www.springframework.org/schema/aop 
	                       http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
	                       http://www.springframework.org/schema/tx
						   http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
	                       http://www.bigtester.org/schema/ate 
	                       http://www.bigtester.org/schema/ate/ate-2.0.xsd">
	                       
	<!-- this registers beans annotated with @Aspect -->
	<aop:aspectj-autoproxy />

	<import resource="classpath:META-INF/logger-reporter.xml" />
	<import resource="classpath:META-INF/page_base_bean.xml" />
	<import resource="./signUpForm.xml" />
	<ate:homePage id="poHomePage" homeUrl="http://www.bigtester.com" dataFile="bigtesterTest_wei/pageObjects/homePage.data.xml"/>
	
    <!-- myWebElement definition -->
    <ate:elementActionDef id="eadClickPrivacyPolicy" elementFind="efPrivacyPolicyLink" elementAction="eaPrivacyPolicyLinkClick" />
	<ate:elementFindByXpath id="efPrivacyPolicyLink" findByValue="Privacy Policy" />
	<ate:clickAction id="eaPrivacyPolicyLinkClick" />

    <ate:elementActionDef id="eadClickServicesTerms" elementFind="efServicesTermsLink" elementAction="eaServicesTermsLinkClick" />
	<ate:elementFindByXpath id="efServicesTermsLink" findByValue="Services Terms" />
	<ate:clickAction id="eaServicesTermsLinkClick" />

    <ate:elementActionDef id="eadClickWebSiteTerms" elementFind="efWebSiteTermsLink" elementAction="eaWebSiteTermsLinkClick" />
	<ate:elementFindByXpath id="efWebSiteTermsLink" findByValue="WebSite Terms" />
	<ate:clickAction id="eaWebSiteTermsLinkClick" />

	<ate:elementActionDef id="eadSaveCookies" elementFind="efAllCookies" elementAction="eaExportAsFile" />
	<ate:cookiesFindAll id="efAllCookies" />
	<ate:fileExportAction id="eaExportAsFile"
		fileNameWithAbsolutePath="myFile" />


	<!-- 	<ate:pagePropertyCorrectnessAsserter -->
<!-- 	id="homePagePropertyAsserter" resultPage="homePage" stepERValue="homePageValidationValue"/> -->

	<ate:pageElementExistenceAsserter 
	 id="homeElementExistenceAsserter" resultPage="poHomePage" stepERValue="homePageVID"/>
			
</beans>