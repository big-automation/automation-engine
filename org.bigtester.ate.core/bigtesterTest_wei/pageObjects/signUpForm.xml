<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:ate="http://www.bigtester.org/schema/ate" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
                           http://www.springframework.org/schema/aop 
                           http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
                           http://www.bigtester.org/schema/ate 
                           http://www.bigtester.org/schema/ate/ate-2.0.xsd">
	                       
	<!-- this registers beans annotated with @Aspect -->
	<aop:aspectj-autoproxy/>

	<import resource="classpath:META-INF/logger-reporter.xml" />
	<import resource="classpath:META-INF/page_base_bean.xml" />

	<ate:regularPage id="poSignUpForm" />

	
	
	<ate:runTimeDataHolder id="randomFirstname" dataHolderType="RandomAlphaText" randomInputLength="8"/>
	<ate:runTimeDataHolder id="randomLastname" dataHolderType="RandomAlphaText" randomInputLength="14"/>
	<ate:runTimeDataHolder id="randomEmail" dataHolderType="RandomEmail"/>
	<ate:runTimeDataHolder id="randomPhone1" dataHolderType="RandomNumbers" randomInputLength="3" />
	<ate:runTimeDataHolder id="randomPhone2" dataHolderType="RandomNumbers" randomInputLength="3" />
	<ate:runTimeDataHolder id="randomPhone3" dataHolderType="RandomNumbers" randomInputLength="4" />
	<ate:runTimeDataHolder id="randomCompanyname" dataHolderType="RandomAlphaText" randomInputLength="255"/>
	<ate:runTimeDataHolder id="randomNoteToUs" dataHolderType="RandomAlphaText" randomInputLength="255"/>

	<!-- elementactiondef of typeInFirstname -->
	<ate:elementActionDef id="typeInFirstName" elementFind="signUpFirstName" elementAction="signUpFirstNameAction" />
	<ate:elementFindByXpath id="signUpFirstName" findByValue="//input[@name='firstName']" />
	<ate:sendKeysAction id="signUpFirstNameAction" dataValue="randomFirstname" />
	
	<!-- elementactiondef of typeInLastname -->
	<ate:elementActionDef id="typeInLastName" elementFind="signUpLastName" elementAction="signUpLastNameAction" />
	<ate:elementFindByXpath id="signUpLastName"	findByValue="//input[@name='lastName']" />
	<ate:sendKeysAction id="signUpLastNameAction" dataValue="randomLastname" />

    <!-- elementactiondef of clickEmailInput -->
	<ate:elementActionDef id="clickEmailInput"   elementFind="signUpEmail" elementAction="signUpEmailClickAction" />
	<ate:clickAction id="signUpEmailClickAction" />

    <!-- elementactiondef of typeInEmail -->
	<ate:elementActionDef id="typeInEmail" elementFind="signUpEmail" elementAction="signUpEmailAction" />
	<ate:elementFindByXpath id="signUpEmail" findByValue="//input[@id='email_register']" />
	<ate:sendKeysAction id="signUpEmailAction" dataValue="randomEmail" />
	
	<!-- click Phone input box ate:elementActionDef definition -->
	<ate:elementActionDef id="clickPhoneInput1" elementFind="signUpPhone1" elementAction="phoneInputClick1"/>
	<ate:clickAction id="phoneInputClick1" />
	
	<ate:elementActionDef id="clickPhoneInput2" elementFind="signUpPhone2" elementAction="phoneInputClick2"/>
	<ate:clickAction id="phoneInputClick2" />
	
	<ate:elementActionDef id="clickPhoneInput3" elementFind="signUpPhone3" elementAction="phoneInputClick3"/>
	<ate:clickAction id="phoneInputClick3" />
	
	<!-- elementactiondef of typeInPhone -->
	<ate:elementActionDef id="typeInPhone1" elementFind="signUpPhone1" elementAction="signUpPhoneAction1" />
	<ate:elementFindByXpath id="signUpPhone1" findByValue="//input[@id='phone']" />
	<ate:sendKeysAction id="signUpPhoneAction1" dataValue="randomPhone" />
	
	<ate:elementActionDef id="typeInPhone2" elementFind="signUpPhone2" elementAction="signUpPhoneAction2" />
	<ate:elementFindByXpath id="signUpPhone2" findByValue="//input[@id='phone']" />
	<ate:sendKeysAction id="signUpPhoneAction2" dataValue="randomPhone" />
	
	<ate:elementActionDef id="typeInPhone3" elementFind="signUpPhone3" elementAction="signUpPhoneAction3" />
	<ate:elementFindByXpath id="signUpPhone3" findByValue="//input[@id='phone']" />
	<ate:sendKeysAction id="signUpPhoneAction3" dataValue="randomPhone" />
	
	<!-- elementactiondef of typeInCompanyname -->
	<ate:elementActionDef id="typeInCompanyName" elementFind="signUpCompanyName" elementAction="signUpCompanyNameAction" />
	<ate:elementFindByXpath id="signUpCompanyName" findByValue="//input[@name='companyName']" />
	<ate:sendKeysAction id="signUpCompanyNameAction" dataValue="randomCompanyname" />
	
	<!-- elementactiondef of typeInNoteToUs -->
	<ate:elementActionDef id="typeInNoteToUs" elementFind="signUpNoteToUs" elementAction="signUpNoteToUsAction" />
	<ate:elementFindByXpath id="signUpNoteToUs" findByValue="//input[@name='NoteToUs']" />
	<ate:sendKeysAction id="signUpNoteToUsAction" dataValue="randomNoteToUs" />


    <!-- click submit button def ate:elementActionDef definition -->
	<ate:elementActionDef id="clickSubmit" elementFind="submitButton" elementAction="submitButtonClick"/>
	<ate:elementFindByXpath id="submitButton" findByValue="//button[@id='register-submit-btn']" />
	<ate:clickAction id="submitButtonClick" />

</beans>