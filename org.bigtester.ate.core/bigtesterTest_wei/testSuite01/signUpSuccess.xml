<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:ate="http://www.bigtester.org/schema/ate" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	                       http://www.springframework.org/schema/aop 
	                       http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
	                       http://www.bigtester.org/schema/ate 
	                       http://www.bigtester.org/schema/ate/ate-2.0.xsd">
	                       
	<!-- this registers beans annotated with @Aspect -->
	<aop:aspectj-autoproxy />

	
	<import resource="classpath:META-INF/page_base_bean.xml" />
	<import resource="classpath:META-INF/case_base_bean.xml" />
	<import resource="../pageObjects/homePage.xml" />
	<import resource="../pageObjects/privacyPolicyPage.xml" />
	<import resource="../pageObjects/servicesTermsPage.xml" />
	<import resource="../pageObjects/webSiteTermsPage.xml" />
	<import resource="../pageObjects/signUpForm.xml" />
	<import resource="../pageObjects/lastPage.xml" />
	
	
	<!-- 
	<ate:firefoxDriver  />  
	<ate:chromeDriver   />
	<ate:IEDriver       />
	<ate:safariDriver   />
	<ate:operaDriver    />
	<ate:htmlUnitDriver />
      -->
	<ate:chromeDriver       />
	
	<!-- here test case id has to be "testcase" -->
	<ate:testCase id="testcase" testCaseName="Bigtester home page test case">
	
		<ate:homeStep id="stepOpenBigtesterHomePage" stepName="stepOpenBigtesterHomePage"
			stepDescription="open bigtester.com home step" targetStep="true" pageObject="poHomePage">
		</ate:homeStep>
		<ate:elementStep id="stepUserTypeInFirstName"
			stepDescription="type in public user first name" stepName="stepUserTypeInFirstName"
			targetStep="false" elementActionDef="typeInFirstName" pageObject="poHomePage">
		</ate:elementStep>
		<ate:elementStep id="stepUserTypeInLastName"
			stepDescription="type in public user last name" stepName="stepUserTypeInLastName"
			targetStep="false" elementActionDef="typeInLastName" pageObject="poHomePage">
		</ate:elementStep>
		<ate:elementStep id="stepUserTypeInEmail"
			stepDescription="type in public user email" stepName="stepUserTypeInEmail"
			targetStep="false" elementActionDef="typeInEmail" pageObject="poHomePage">
		</ate:elementStep>
		<ate:elementStep id="stepUserTypeInPhone1"
			stepDescription="type in public user phone number part 1" stepName="stepUserTypeInPhone1"
			targetStep="false" elementActionDef="typeInPhone1" pageObject="poHomePage">
		</ate:elementStep>
		<ate:elementStep id="stepUserTypeInPhone2"
			stepDescription="type in public user phone number part 2" stepName="stepUserTypeInPhone2"
			targetStep="false" elementActionDef="typeInPhone2" pageObject="poHomePage">
		</ate:elementStep>
		<ate:elementStep id="stepUserTypeInPhone3"
			stepDescription="type in public user phone number part 3" stepName="stepUserTypeInPhone3"
			targetStep="false" elementActionDef="typeInPhone3" pageObject="poHomePage">
		</ate:elementStep>
		<ate:elementStep id="stepUserTypeInCompanyName"
			stepDescription="type in public user company name" stepName="stepUserTypeInCompanyName"
			targetStep="false" elementActionDef="typeInCompanyName" pageObject="poHomePage">
		</ate:elementStep>
		<ate:elementStep id="stepUserTypeInNoteToUs"
			stepDescription="type in public user note to us" stepName="stepUserTypeInNoteToUs"
			targetStep="false" elementActionDef="typeInNoteToUs" pageObject="poHomePage">
		</ate:elementStep>
		<ate:elementStep id="clickSubmitButton"
			stepDescription="click submit button to submit" stepName="clickSubmitButton"
			targetStep="false" elementActionDef="clickSubmit" pageObject="poHomePage">
		<!-- 	<property name="expectedResultAsserter">
				<list>
					<ref bean="publicLoginDashBoardPropertyAsserter" />
					<ref bean="publicLoginDashBoardElementExistenceAsserter" />
				</list>
			</property> -->
		</ate:elementStep>
		<ate:lastStep id="stepLaststep" stepName="stepLaststep"
			stepDescription="last step close browser" targetStep="false" pageObject="poLastPage">
		</ate:lastStep>

	</ate:testCase>
</beans>